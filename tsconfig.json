{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "types": ["bun"],
    "noEmit": true,
    "allowJs": false
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules", "public", "dist"]
}
